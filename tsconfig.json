{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "esnext",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "lib": [
    "es2015"
  ]
}